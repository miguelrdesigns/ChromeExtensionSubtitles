{
  "manifest_version": 2,
  "name": "Subtitle Extension",
  "version": "1.0",
  "description": "This extension helps you add subtitles automatically to a video",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Subtitle Extension",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ]
}